@{
    Layout ="~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container py-4">
    <div class="card shadow-lg mx-auto" style="max-width:900px;">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0"><i class="fas fa-user-injured me-2"></i>Hồ Sơ Bệnh Nhân</h2>
        </div>
        @if (ViewBag.list != null && ViewBag.list.Count > 0) {
            <div class="row g-0 p-4 align-items-center">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <img src="@Url.Content("~/Uploads/" + @ViewBag.list[0][8])" alt="Ảnh bệnh nhân" class="rounded-circle border border-3 border-primary" style="width:160px;height:160px;object-fit:cover;">
                </div>
                <div class="col-md-9">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr><th class="text-end">Mã bệnh nhân:</th><td>@ViewBag.list[0][0]</td></tr>
                            <tr><th class="text-end">Họ và tên:</th><td>@ViewBag.list[0][1]</td></tr>
                            <tr><th class="text-end">Ngày sinh:</th><td>@(ViewBag.list[0][6]?.ToString().Length >= 10 ? ViewBag.list[0][6].ToString().Substring(0, 10) : ViewBag.list[0][6])</td></tr>
                            <tr><th class="text-end">Giới tính:</th><td>@ViewBag.list[0][7]</td></tr>
                            <tr><th class="text-end">Số điện thoại:</th><td>@ViewBag.list[0][4]</td></tr>
                            <tr><th class="text-end">Email:</th><td>@ViewBag.list[0][3]</td></tr>   
                            <tr><th class="text-end">Địa chỉ:</th><td>@ViewBag.list[0][5]</td></tr>
                            <tr><th class="text-end">Số dư tài khoản:</th><td>@ViewBag.list[0][9]</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
        } else {
            <div class="card-body text-center">
                <p class="text-danger">Không có thông tin bệnh nhân này.</p>
            </div>
        }
        <div class="card-footer text-center bg-white">
            <button onclick="history.back()" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-arrow-left me-2"></i>Quay về trang trước
            </button>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
