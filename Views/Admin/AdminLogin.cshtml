@{
    Layout = null;
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .admin-login-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        padding: 40px 32px 32px 32px;
        max-width: 400px;
        width: 100%;
        margin: 32px 0;
        position: relative;
    }
    .admin-login-card .logo {
        width: 80px;
        margin: 0 auto 18px auto;
        display: block;
    }
    .admin-login-card h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #007bff;
        margin-bottom: 18px;
        letter-spacing: 1px;
    }
    .admin-login-card .form-control {
        border-radius: 8px;
        font-size: 1rem;
        padding: 12px 14px;
        margin-bottom: 18px;
    }
    .admin-login-card .btn-primary {
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 12px 0;
        background: linear-gradient(90deg, #007bff 0%, #0056b3 100%);
        border: none;
        transition: background 0.2s;
    }
    .admin-login-card .btn-primary:hover {
        background: linear-gradient(90deg, #0056b3 0%, #007bff 100%);
    }
    .admin-login-card .alert {
        font-size: 1rem;
        border-radius: 8px;
        margin-bottom: 18px;
    }

</style>
<div class="admin-login-card shadow-lg animate__animated animate__fadeInDown">
    <img src="/images/logo_vov.png" alt="Logo" class="logo">
    <h1>Admin Login</h1>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <form action="~/Admin/XuLyAdminLogin" method="post" autocomplete="off">
        <input type="text" name="sdt" class="form-control" placeholder="Số điện thoại" required autofocus />
        <input type="password" name="password" class="form-control" placeholder="Mật khẩu" required />
        <button type="submit" class="btn btn-primary w-100 mt-2 mb-2">Đăng nhập</button>
    </form>
    <div class="text-center mt-3" style="font-size: 0.95rem; color: #888;">
        © @DateTime.Now.Year VOV Bác Sĩ. All rights reserved.
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>


