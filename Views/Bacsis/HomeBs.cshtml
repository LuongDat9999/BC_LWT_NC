@{
    ViewData["Title"] = "HomeBs";
    Layout = "~/Views/Shared/Bs_Layout.cshtml";
    <link rel="stylesheet" href="~/css/HomeBs.css" asp-append-version="true" />
}
<span>Tổng Thu nhập: @ViewBag.luong[0][9]</span>

<h2>Lịch khám đã xác nhận</h2>
@if (ViewBag.daXacNhan == null || ViewBag.daXacNhan.Count == 0)
{
    <p>Không có lịch khám đã xác nhận.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên bệnh nhân</th>
                <th>Ngày khám</th>
                <th>Giờ khám</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < ViewBag.daXacNhan.Count; i++)
        {
            var row = ViewBag.daXacNhan[i];
            <tr>
                <td>@(i+1)</td>
                <td>@row[2]</td>
                <td>@row[4]</td>
                <td>@row[5]</td>
                <td>@row[8]</td>
                <td>
                    <a class="btn btn-info" target="_blank" href="@Url.Action("ChiTietBenhNhan", "Admin", new { id = row[1] })">Xem chi tiết</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<h2>Danh sách chờ xác nhận</h2>
@if (ViewBag.choXacNhan == null || ViewBag.choXacNhan.Count == 0)
{
    <p>Không có lịch hẹn chờ xác nhận.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên bệnh nhân</th>
                <th>Ngày khám</th>
                <th>Giờ khám</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < ViewBag.choXacNhan.Count; i++)
        {
            var row = ViewBag.choXacNhan[i];
            <tr>
                <td>@(i+1)</td>
                <td>@row[2]</td>
                <td>@row[4]</td>
                <td>@row[5]</td>
                <td>@row[8]</td>
                <td>
                    <a class="btn btn-info" target="_blank" href="@Url.Action("ChiTietBenhNhan", "Admin", new { id = row[1] })">Xem chi tiết</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
